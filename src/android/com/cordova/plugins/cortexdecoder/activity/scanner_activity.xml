<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/scanner_activity"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:keepScreenOn="true"
  android:orientation="vertical"
  tools:context="com.cordova.plugins.cortexdecoder.activity.ScannerActivity">

  <RelativeLayout
    android:id="@+id/cortex_scanner_view"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="0dp"
    android:layout_weight="1"
    android:paddingBottom="0dp">

    <ImageButton
      android:id="@+id/torch_button"
      android:layout_alignParentRight="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="toggleTorch"
      android:src="@drawable/toggle_torch" />
  </RelativeLayout>
</LinearLayout>
